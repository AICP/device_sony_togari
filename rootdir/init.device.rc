on boot
    # Owner for the proximity sensor
    chown system system /sys/devices/i2c-2/2-0054/threshold
    chown system system /sys/devices/i2c-2/2-0054/nburst

    # Owner for the light sensor
    chown system system /sys/devices/i2c-0/0-0036/als_enable
    chown system system /sys/devices/i2c-0/0-0036/als_result

    # Panel backlight
    chown system system /sys/class/leds/wled:backlight/brightness
    chmod 660 /sys/class/leds/wled:backlight/brightness

    # LED
    chown system system /sys/class/leds/led:rgb_red/brightness
    chmod 660 /sys/class/leds/led:rgb_red/brightness
    chown system system /sys/class/leds/led:rgb_green/brightness
    chmod 660 /sys/class/leds/led:rgb_green/brightness
    chown system system /sys/class/leds/led:rgb_blue/brightness
    chmod 660 /sys/class/leds/led:rgb_blue/brightness
    chown system system /sys/class/leds/led:rgb_red/pattern
    chmod 660 /sys/class/leds/led:rgb_red/pattern
    chown system system /sys/class/leds/led:rgb_green/pattern
    chmod 660 /sys/class/leds/led:rgb_green/pattern
    chown system system /sys/class/leds/led:rgb_blue/pattern
    chmod 660 /sys/class/leds/led:rgb_blue/pattern

    # Vibrator
    chown system system /sys/devices/i2c-2/2-0049/intensity
